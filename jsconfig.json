{
  "compilerOptions": {
    "target": "esnext",
    "baseUrl": "./src",
    "jsx": "react",
    "moduleResolution": "node",
    "paths": {
      "src/*": ["/*"],
      "core/*": ["core/*"],
      "store/*": ["store/*"],
      "App": ["features/App"],
      "App/*": ["features/App/*"],
      "Common": ["features/Common"],
      "Common/*": ["features/Common/*"],
      "SplashScreen": ["features/SplashScreen"],
      "Auth": ["features/Auth"],
      "Profile": ["features/Profile"],
      "Cabinet": ["features/Cabinet"],
      "FormComponents": ["features/FormComponents"],
      "constants": ["constants"],
      "constants/*": ["constants/*"],
      "images/*": ["images/*"],
      "images/icons/*": ["images/icons/*"],
      "helpers": ["helpers"],
      "helpers/*": ["helpers/*"],
      "hooks": ["hooks"],
      "languages/*": ["languages/*"]
    }
  },
  "exclude": ["node_modules", "dist"]
}
